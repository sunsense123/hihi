<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/res_image"
                android:layout_width="fill_parent"
                android:background="@drawable/sample_img"
                android:layout_height="300dp" />
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="#88000000"
                android:layout_alignParentBottom="true">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:id="@+id/res_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textColor="#FFFFFF"
                            android:gravity="bottom"
                            android:paddingBottom="3dp"
                            android:layout_marginRight="70dp"
                            android:paddingLeft="20dp"
                            android:textSize="20dp"
                            android:text="@string/sample_res_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="40dp">
                        <TextView
                            android:id="@+id/res_cuisine"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="70dp"
                            android:textColor="#E0E0E0"
                            android:paddingLeft="20dp"
                            android:paddingTop="3dp"
                            android:text="@string/sample_res_cuisine"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_marginTop="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/res_linenum"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="11"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:paddingTop="2dp"
                            android:paddingLeft="14dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:text="@string/num"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"
                            android:paddingTop="5dp"
                            android:paddingLeft="2dp"
                            android:layout_marginLeft="40dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/res_distance"
                            android:layout_width="40dp"
                            android:paddingTop="19dp"
                            android:paddingLeft="10dp"
                            android:layout_height="fill_parent"
                            android:textColor="#E0E0E0"
                            android:textSize="15dp"
                            android:text="120"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="40dp"
                            android:text="m"
                            android:paddingLeft="3dp"
                            android:paddingTop="20dp"
                            android:textColor="#E0E0E0"/>
                    </FrameLayout>
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>